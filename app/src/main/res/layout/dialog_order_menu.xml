<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                tools:text="Nasi Bakar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/txtFoodQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18sp"
                    tools:text="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Tesisa"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="16sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/edtOrderQuantity"
                android:layout_width="200dp"
                android:hint="Jumlah"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtFoodName"
                android:layout_marginStart="16dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/edtOrderDesc"
                android:layout_width="200dp"
                android:hint="Keterangan Order"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnOrder"
                android:layout_marginStart="16dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtDetailDesc"
                android:layout_width="200dp"
                android:hint="Keterangan Order"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtOrderDesc"
                android:layout_marginStart="16dp"
                android:inputType="text" />

            <Button
                android:id="@+id/btnOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtFoodName"
                android:layout_toEndOf="@id/edtOrderDesc"
                android:text="Pesan"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
